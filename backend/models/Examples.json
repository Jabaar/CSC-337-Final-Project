{
    "StorySchema": {
        "type": "object",
        "properties": {
            "collectedAt": {
                "type": "number",
                "description": "The timestamp when the story was collected."
            },
            "summaryText": {
                "type": "string",
                "description": "A summary of the story content."
            },
            "sentiment": {
                "type": "number",
                "description": "A numerical value representing the sentiment of the story."
            },
            "newsType": {
                "type": "string",
                "description": "The type or category of the news story."
            },
            "urls": {
                "type": "array",
                "items": {
                    "type": "string",
                    "format": "uri",
                    "description": "An array of URLs related to the news story."
                },
                "description": "A list of URLs associated with the story."
            }
        },
        "required": [
            "collectedAt",
            "summaryText",
            "sentiment",
            "newsType",
            "urls"
        ],
        "additionalProperties": false
    }
}
  
{
    "UserSchema": {
        "type": "object",
        "properties": {
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "The ISO 8601 date format of the time that this object was created."
            },
            "password": {
                "type": "string",
                "description": "A hashed password for user authentication."
            },
            "pfpPath": {
                "type": "string",
                "description": "The file path to the user's profile picture."
            },
            "username": {
                "type": "string",
                "description": "The user's chosen username."
            },
            "interests": {
                "type": "array",
                "items": {
                    "type": "string",
                    "description": "Specific topics the user is interested in."
                },
                "description": "A list of topics that the user has expressed interest in."
            },
            "email": {
                "type": "string",
                "format": "email",
                "description": "The user's email address."
            },
            "bio": {
                "type": "string",
                "description": "A short biography or description about the user."
            },
            "lastLogin": {
                "type": "string",
                "format": "date-time",
                "description": "The ISO 8601 date format of the last time the user logged in."
            }
        },
        "required": [
            "createdAt",
            "password",
            "username",
            "interests"
        ],
        "additionalProperties": false
    }
}
  
{
    "CommentSchema": {
        "type": "object",
        "properties": {
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "The ISO 8601 date format of the time that the comment was created."
            },
            "authorId": {
                "type": "string",
                "description": "The unique identifier of the user who created the comment."
            },
            "text": {
                "type": "string",
                "description": "The actual text content of the comment."
            },
            "postId": {
                "type": "string",
                "description": "The identifier of the post or content to which this comment belongs."
            },
            "likes": {
                "type": "integer",
                "default": 0,
                "description": "The number of likes this comment has received."
            },
            "replies": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/CommentSchema",
                    "description": "A reply to the comment."
                },
                "description": "An array of replies to this comment, which are comments themselves."
            }
        },
        "required": [
            "createdAt",
            "authorId",
            "text",
            "postId"
        ],
        "additionalProperties": false,
        "definitions": {
            "CommentSchema": {
                "type": "object",
